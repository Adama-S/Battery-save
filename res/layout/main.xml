<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1">

    <TextView
            android:id="@+id/textViewBatteryInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Battery Info: " >
    </TextView>

    <ImageView
            android:id="@+id/imageViewBatteryState"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:src="@drawable/ic_launcher" android:layout_gravity="right">
    </ImageView>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Energy Saving"
            android:id="@+id/button" android:layout_gravity="center_horizontal"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="List of Applications:"
            android:id="@+id/textView"/>
    <ListView
            android:id="@+id/listView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
    </ListView>


</LinearLayout>
